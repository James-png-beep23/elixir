<%!-- 
# lib/house3_web/live/floor_live/index.html.heex --%>

<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Apartments Management</h1>

  <!-- Create Apartment Form -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Create New Apartment</h2>
    
    <form phx-submit="create_apartment" class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
            Apartment Name
          </label>
          <input 
            type="text" 
            id="name"
            name="name" 
            value={@name}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            placeholder="Enter apartment name"
          />
        </div>
        
        <div>
          <label for="number_floors" class="block text-sm font-medium text-gray-700 mb-1">
            Number of Floors
          </label>
          <input 
            type="number" 
            id="number_floors"
            name="number_floors" 
            value={@number_floors}
            min="1"
            max="20"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            placeholder="Enter number of floors"
          />
        </div>
      </div>
      
      <button 
        type="submit"
        class="w-full md:w-auto px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
      >
        Create Apartment
      </button>
    </form>
  </div>

  <!-- Apartments List -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Existing Apartments</h2>
    
    <%= if Enum.empty?(@apartments) do %>
      <div class="text-center py-8 text-gray-500">
        No apartments created yet. Create your first apartment above.
      </div>
    <% else %>
      <div class="space-y-6">
        <%= for apartment <- @apartments do %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="text-lg font-medium text-gray-900">
                  <%= apartment.name %>
                </h3>
                <p class="text-sm text-gray-600">
                  Total Floors: <span class="font-semibold"><%= apartment.number_floors %></span>
                </p>
                <p class="text-sm text-gray-600">
                 
                  Created Floors: <span class="font-semibold">
                    <%= if Ecto.assoc_loaded?(apartment.floors) do %>
                      <%= length(apartment.floors) %>
                    <% else %>
                      0
                    <% end %>
                  </span>
                </p>
              </div>
              
              <!-- Create Floors Button -->
              <button 
                phx-click="create_floor" 
                phx-value-apartment_id={apartment.id}
                class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors"
              >
                Create Floors
              </button>
            </div>

            <!-- Floors List -->
            <%= if Ecto.assoc_loaded?(apartment.floors) && apartment.floors != [] do %>
              <div class="mt-3">
                <h4 class="text-sm font-medium text-gray-700 mb-2">Floors:</h4>
                <div class="flex flex-wrap gap-2">
                  <%= for floor <- apartment.floors do %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= floor.name %>
                    </span>
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="mt-3 text-sm text-gray-500">
                No floors created yet. Click "Create Floors" to generate them.
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<%!-- 
  <!-- Flash Messages -->
  <div class="fixed top-4 right-4 z-50">
    <%= if live_flash(@flash, :info) do %>
      <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-2 shadow-lg">
        <p class="text-green-800 text-sm font-medium">
          <%= live_flash(@flash, :info) %>
        </p>
      </div>
    <% end %>

    <%= if live_flash(@flash, :error) do %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-2 shadow-lg">
        <p class="text-red-800 text-sm font-medium">
          <%= live_flash(@flash, :error) %>
        </p>
      </div>
    <% end %>
  </div> --%>
</div>